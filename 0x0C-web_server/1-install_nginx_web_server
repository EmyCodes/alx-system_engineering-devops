#!/usr/bin/env bash
#   Insralling Nginx
#   Listening at port 80
#   Querying nginx

# Update Ubuntu
sudo apt-get -y update

# Upgrade Ubuntu
sudo apt-get -y upgrade

# Install nginx
sudo apt-get -y install nginx

# Handling Firewall
sudo ufw allow 'Nginx HTTP'

# Querying Nginx
echo "Hello World!" > /var/www/html/index.html

# Start Web Server
service nginx start
